<div id="sign_up">
  <h3>Sign up</h3>
  <%= form_for resource, :as => resource_name, :url => registration_path(resource_name), :remote => true, :html => {:class => 'signup-form'} do |f| %>
    <%= f.text_field :email, :required => true, :placeholder => 'your email here!' %>
    <%= f.submit 'Sign up' %>
  <% end %>
</div>
